@model IList<MonthlyPostsCountItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Danh sách các bài viết trong 12 tháng
    </h3>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-asp-controller="Blog"
               asp-action="Archives"
               asp-route-year="@item.Year"
               asp-route-month="@item.Month">
                    @item.Month / @item.Year
                    <span>(@item.PostsCount)</span>
                </a>
            </li>
        }
    </ul>
</div>