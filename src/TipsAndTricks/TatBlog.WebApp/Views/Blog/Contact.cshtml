@{
    ViewData["PageTitle"] = "Liên hệ";
}

<div class="row d-flex justify-content-center align-items-center ">
    <div class="col-xl-8">
        <h1 class="mb-4 pt-2">Thông tin liên hệ</h1>

        <div class="card" style="border-radius: 15px;">
            <form asp-controller="Blog"
                  asp-action="Contact"
                  method="post">
                <div class="row align-items-center pt-4 pb-3">
                    <div class="col-md-3 ps-5">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-md-9 pe-5">
                        <input type="email" class="form-control form-control-lg" id="email" name="email" required />
                    </div>
                </div>
                <hr class="mx-n3">
                <div class="row align-items-center py-3">
                    <div class="col-md-3 ps-5">
                        <h6 class="mb-0">Chủ đề</h6>
                    </div>
                    <div class="col-md-9 pe-5">
                        <input type="text" class="form-control form-control-lg" id="subject" name="subject" required />
                    </div>
                </div>
                <hr class="mx-n3">
                <div class="row align-items-center py-3">
                    <div class="col-md-3 ps-5">
                        <h6 class="mb-0">Nội dung</h6>
                    </div>
                    <div class="col-md-9 pe-5">
                        <textarea class="form-control" name="body" id="content" rows="5" required></textarea>
                    </div>
                </div>
                <hr class="mx-n3">
                <div class="container">
                    <div class="row">
                        <div class="px-5 py-4 col">
                            <button type="submit" class="btn btn-primary btn-lg">Gửi</button>
                            @if (ViewBag.Success != null)
                            {
                                <span class="text-success fst-italic fs-6">Gửi thành công</span>
                            }
                        </div>
                        <div class="col">
                            <div>
                                <i class="fs-5 fa fa-phone"></i>
                                <a href="tel:0528695414" class="ms-1">0528.695.414</a>
                            </div>
                            <div class="my-2">
                                <i class="fa fa-envelope"></i>
                                <a href="mailto:2012394@dlu.edu.vn" class="ms-1">2012394@dlu.edu.vn</a>
                            </div>
                            <div>
                                <i class="fs-5 fa fa-github"></i>
                                <a href="https://github.com/victornguyen1004" target="_blank" class="ms-1">Github</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

