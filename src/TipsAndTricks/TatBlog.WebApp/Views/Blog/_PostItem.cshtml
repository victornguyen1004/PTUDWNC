@model Post

@{
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
            ? "/images/img_1.jpg"
            : $"/{Model.ImageUrl}";
}

<article class="blog-entry mb-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@imageUrl"
                    class="card-img"
                    alt="@Model.Title" />   
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-controller="Blog"
                           asp-action="Post"
                           asp-route-year="@Model.PostedDate.Year"
                           asp-route-month="@Model.PostedDate.Month"
                           asp-route-day="@Model.PostedDate.Day"
                           asp-route-slug="@Model.UrlSlug"
                           title="@Model.Title">
                            @Model.Title
                        </a>
                    </h5>
                    <p class="card-text">
                        <small class="text-muted">
                            Tác giả:
                        </small>
                        <a asp-controller="Blog"
                        asp-action="Author"
                        asp-route-id="@Model.Author.UrlSlug"
                        class="text-primary"
                        title="@Model.Author.FullName">
                        @Model.Author.FullName
                    </a>
                        <small class="text-muted">
                            Chủ đề:
                        </small>
                        <a asp-controller="Blog"
                           asp-action="Category"
                           asp-route-id="@Model.Category.UrlSlug"
                           class="text-primary"
                           title="@Model.Category.Name">
                            @Model.Category.Name
                        </a>
                    </p>
                    <p class="card-text">
                        @Html.Raw(Model.ShortDescription)
                    </p>
                    <div class="tag-list">
                        <partial name="_TagList" model="@Model.Tags" />
                    </div>

                    <div class="text-end">
                        <a asp-controller="Blog"
                        asp-action="Post"
                        asp-route-year="@Model.PostedDate.Year"
                        asp-route-month="@Model.PostedDate.Month"
                        asp-route-day="@Model.PostedDate.Day"
                        asp-route-slug="@Model.UrlSlug"
                        class="btn btn-primary"
                        title="@Model.Title">
                    Xem chi tiết</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</article>