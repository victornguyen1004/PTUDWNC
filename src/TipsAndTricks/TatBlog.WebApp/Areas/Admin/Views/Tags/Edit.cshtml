@model TagEditModel

@{
    ViewData["PageTitle"] = "Thêm/Cập nhật thẻ";
}

<h1>Thêm/Cập nhật tác giả</h1>

<form asp-area="Admin"
      asp-controller="Tags"
      asp-action="Edit"
      enctype="multipart/form-data"
      method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3">
        <label asp-for="Name"
               class="col-sm-2 col-form-label">Họ và tên</label>
        <div class="col-sm-10">
            <input id="Name" type="text"
                   class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UrlSlug"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input id="UrlSlug" type="text"
                   class="form-control" asp-for="UrlSlug" />
            <span asp-validation-for="UrlSlug"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Description"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control" asp-for="Description" />
            <span asp-validation-for="Description"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="text-center my-4">
        <button type="submit" class="btn btn-primary">
            Lưu các thay đổi
        </button>

        <a asp-area="Admin"
           asp-controller="Tags"
           asp-action="Index"
           class="btn btn-danger">
            Hủy & Quay lại
        </a>
    </div>
</form>